<% include partials/header %>

<div class="container" id="container">
    <div class="card">
        <div class="card-body">
            <img class="card-title" src="<%= blogs[0].image %>"> 
            <h1 class="card-header"> <%= blogs[0].title %> </h1>
              <p class="card-text"> <%= blogs[0].body %> </p>
              <% if (blogs[0].isauthor){ %>
                <form action="/blog/<%= blogs[0]._id %>/delete" method="post">
                <input class="btn float-right login_btn btn-primary" type="submit" value="Delete">
                </form>
                <form action="/blog/<%= blogs[0]._id %>/update" method="get">
                    <div class="form-group">
                        <input class="btn float-right login_btn btn-primary" type="submit" value="Update">
                    </div>
                </form>
              <% }%>
            </div>
          </div>
        </div>

<% include partials/footer %>