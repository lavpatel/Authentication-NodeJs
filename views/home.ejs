<% include partials/header %>

<div class="container" id="container">
  <% blogs.forEach(blog => { %>
    <br>
    <div class="card">
      <div class="card-body">
        <img class="card-title" src=<%= blog.image %>> 
        <h1 class="card-header"> <%= blog.title %> </h1>
        <p class="card-text"> <%= blog.body.slice(0,100) %>... </p>
        <a href="/blog/<%= blog._id %>" class="card-link">Read More</a>
      </div>
    </div>

 

    <!-- <h1 id="blog-h1"> <%= blog.title %></h1> -->
    <br>
  <%}) %>
</div>
    
<% include partials/footer %>
