<% include partials/header %>

        <div class="container" id="container">

            <div class="d-flex justify-content-center h-100">
                <div class="card third">
                    
                    <div class="card-header">
                        <br><h3>Create Blog</h3>
                    </div>

                    <div class="card-body">
                        <form action="/createBlog" class="createBlog" method="post" id="createBlog">

                            <div class="input-group form-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="fas fa-user"></i>
                                    </span>
                                </div>
                                <input type="text" class="form-control" id="title" name="blog[title]" placeholder="TItle" required>
                            </div>
                            <div class="input-group form-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="fas fa-image"></i>
                                    </span>
                                </div>
                                <input type="text" class="form-control" id="image" name="blog[image]" placeholder="link" required>
                            </div>
                            <div class="input-group form-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="fas fa-info-circle"></i>
                                    </span>
                                </div>
                                <textarea rows="10" cols="80" class="form-control" id="body" name="blog[body]" form="createBlog" hint="Write Blog here"> </textarea>
                            </div>

                            <div class="form-group">
                                <input class="btn float-right login_btn" type="submit" value="Create">
                            </div>
                        </form>
                    </div>
                    <div class="card-footer">
                        
                    </div>
                </div>
            </div>
        </div>

        <% include partials/footer %>
